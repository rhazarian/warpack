{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "dist",
    "target": "es2016",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  }
}